# ==================================
# SUPABASE CONFIGURATION
# ==================================
# Get these from: Supabase Dashboard > Settings > API

# Your Supabase project URL
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co

# Service Role Key (SECRET - server-side only, has full admin access)
# DO NOT use the anon key here - you need the service_role key
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxx

# ==================================
# SERVER CONFIGURATION
# ==================================
PORT=3001
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001

# ==================================
# OAUTH - SOCIAL MEDIA CONNECTIONS
# ==================================
# These are for connecting user's social accounts to post content
# NOT for user authentication (Supabase handles that)

# LinkedIn (for account connection AND posting)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3001/api/oauth/linkedin/callback

# Instagram (for account connection AND posting)
INSTAGRAM_CLIENT_ID=your_instagram_app_id
INSTAGRAM_CLIENT_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:3001/api/oauth/instagram/callback

# TikTok (for account connection AND posting)
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=http://localhost:3001/api/oauth/tiktok/callback

# Twitter/X (for account connection AND posting)
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=http://localhost:3001/api/oauth/twitter/callback

# ==================================
# SECURITY - TOKEN ENCRYPTION
# ==================================
# 32-byte (64 character) hex string for encrypting OAuth tokens at rest
# Generate a secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# IMPORTANT: Keep this secret and never commit it to version control!
ENCRYPTION_KEY=your_64_character_hex_string_here_generate_with_command_above

# ==================================
# REMOVED (Now handled by Supabase)
# ==================================
# JWT_SECRET - No longer needed, Supabase handles JWT
# GOOGLE_CLIENT_ID - Moved to Supabase Auth providers
# GOOGLE_CLIENT_SECRET - Moved to Supabase Auth providers
# GITHUB_CLIENT_ID - Moved to Supabase Auth providers
# GITHUB_CLIENT_SECRET - Moved to Supabase Auth providers
